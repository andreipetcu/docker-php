{
    "name": "andreipetcu/docker-php",
    "type": "library",
    "require": {
        "php": "^7.0",
        "symfony/process": "^3.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.3",
        "mockery/mockery": "^0.9.9"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "AndreiPetcu\\DockerPhp\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-ci": "vendor/bin/phpunit --coverage-clover build/coverage.xml"
    },
    "authors": [
        {
            "name": "Andrei Petcu",
            "email": "mihai@adoreme.com"
        }
    ]
}
